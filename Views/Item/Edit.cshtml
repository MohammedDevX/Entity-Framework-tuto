@model learn_entity_framework.ViewModels.ItemVM

<div class="conainer">
    <form asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="number" name="Id" value="@ViewBag.item.Id" hidden />
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" value="@ViewBag.item.Nom" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" value="@ViewBag.item.Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>